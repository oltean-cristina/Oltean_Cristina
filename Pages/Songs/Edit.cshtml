@page
@model Oltean_Cristina.Pages.Songs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Song</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Song.ID" />
            <div class="form-group">
                <label asp-for="Song.Title" class="control-label"></label>
                <input asp-for="Song.Title" class="form-control" />
                <span asp-validation-for="Song.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.Artist" class="control-label"></label>
                <input asp-for="Song.Artist" class="form-control" />
                <span asp-validation-for="Song.Artist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.Price" class="control-label"></label>
                <input asp-for="Song.Price" class="form-control" />
                <span asp-validation-for="Song.Price" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Song.ReleaseDate" class="control-label"></label>

                <input asp-for="Song.ReleaseDate" class="form-control" />

                <span asp-validation-for="Song.ReleaseDate" class="text￾danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.CompanyID" class="control-label">Entartainement Company</label>

                <select asp-for="Song.CompanyID" class="form-control" asp-items="ViewBag.CompanyID">
                </select>

                <span asp-validation-for="Song.CompanyID" class="text-danger"></span>

            </div>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{ int cnt = 0;
                                            foreach (var gen in Model.AssignedGenreDataList)
                                            {
                                                if (cnt++ % 3 == 0)
                                                {
                            @:</tr><tr>
                            }
            @:<td>
                <input type="checkbox"
                       name="selectedGenres"
                       value="@gen.GenreID"
                       @(Html.Raw(gen.Assigned ? "checked=\"checked\"" : "")) />
                                @: @gen.Name
                            @:</td>
                        }
        @:</tr>
                            }
                        </table>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
